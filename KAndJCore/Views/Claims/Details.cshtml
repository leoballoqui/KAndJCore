@model KAndJCore.Models.Claim

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Claim</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Claim Number
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClaimNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Client)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Buro)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Buro.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Template)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Template.Name)
        </dd>
        <dt class="col-sm-2">
            Disputed Accounts
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in Model.Disputes)
            {
                <label style="display:block">
                    @item.CompleteReason
                </label>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Created)
        </dt>
        <dd class="col-sm-10">
            @Model.Created.ToString("MM/dd/yyyy")
        </dd>
        <dt class="col-sm-2">
            Next Revision Date
        </dt>
        <dd class="col-sm-10">
            @Model.NextRevision.ToString("MM/dd/yyyy")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CurrentIteration)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CurrentIteration)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="EditDisputes" asp-route-id="@Model.Id">Edit Disputes</a> |
    <a asp-action="Index">Back to List</a>
</div>
